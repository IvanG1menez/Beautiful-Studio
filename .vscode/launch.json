{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Debug Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8000"
            ],
            "django": true,
            "autoReload": {
                "enable": true
            },
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "DJANGO_SETTINGS_MODULE": "beautiful_studio_backend.settings"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "redirectOutput": true
        },
        {
            "name": "Django: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "DJANGO_SETTINGS_MODULE": "beautiful_studio_backend.settings"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Django: Debug Specific App Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "test",
                "${input:appName}"
            ],
            "django": true,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "DJANGO_SETTINGS_MODULE": "beautiful_studio_backend.settings"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Next.js: Debug Server-side",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/next/dist/bin/next",
            "args": [
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect"
            }
        },
        {
            "name": "Next.js: Debug Client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMapPathOverrides": {
                "webpack://_N_E/*": "${workspaceFolder}/frontend/*",
                "webpack:///./*": "${workspaceFolder}/frontend/*"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/backend"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": [
                "Django: Debug Server",
                "Next.js: Debug Server-side"
            ],
            "stopAll": true
        }
    ],
    "inputs": [
        {
            "id": "appName",
            "description": "Enter the Django app name to test",
            "default": "users",
            "type": "promptString"
        }
    ]
}